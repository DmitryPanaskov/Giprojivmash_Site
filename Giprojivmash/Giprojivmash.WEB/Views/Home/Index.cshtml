@{
    ViewData["Title"] = "Главная";
}


<div class="container-fluid">
    <div class="d-none d-md-block w-100">
        <div id="particles-js">
        </div>
        <div class="slogan-box-1">
            <p>
                ВОПЛОЩАЕМ ВАШИ ИДЕИ В РЕАЛЬНОСТЬ
            </p>
        </div>
    </div>
</div>
<br />

<div class="container">
