@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                    <li data-target="#carousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a asp-action="Kristall" asp-controller="Portfolio">
                            <img class="d-block w-100" src="~/images/portfolio/carousel/1.jpg" alt="КРИСТАЛЛ-ХОЛДИНГ">
                            <div class="carousel-caption">
                                <div class="portfolio-caption">
                                    <h4>Возведение и реконструкция</h4>
                                    <p>ОАО "Гомельское ПО "Кристалл" - управляющая компания холдинга "КРИСТАЛЛ-ХОЛДИНГ"</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a asp-action="Himzavod" asp-controller="Portfolio">
                            <img class="d-block w-100" src="~/images/portfolio/carousel/2.jpg" alt="Second slide">
                            <div class="carousel-caption">
                                <div class="portfolio-caption">
                                    <h4>Реконструкция здания тепловой электростанции</h4>
                                    <p>ОАО «Гомельский химический завод»</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a asp-action="Gomeldrev" asp-controller="Portfolio">
                            <img class="d-block w-100" src="~/images/portfolio/carousel/3.jpg" alt="Third slide">
                            <div class="carousel-caption">
                                <div class="portfolio-caption">
                                    <h4>Строительство завода</h4>
                                    <p>ОАО «Гомельдрев» г. Речица</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a asp-action="Hoiniki" asp-controller="Portfolio">
                            <img class="d-block w-100" src="~/images/portfolio/carousel/4.jpg" alt="Third slide">
                            <div class="carousel-caption">
                                <div class="portfolio-caption">
                                    <h4>Модернизация завода</h4>
                                    <p>ОАО «Хойникский завод ЖБИ»</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <a class="a-block carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="a-block carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='gold' width='8' height='8' viewBox='0 0 8 8'%3e%3cpath d='M5.25 0l-4 4 4 4 1.5-1.5L4.25 4l2.5-2.5L5.25 0z'/%3e%3c/svg%3e");
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='gold' width='8' height='8' viewBox='0 0 8 8'%3e%3cpath d='M2.75 0l-1.5 1.5L3.75 4l-2.5 2.5L2.75 8l4-4-4-4z'/%3e%3c/svg%3e")
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 3rem;
    }

    .carousel-indicators li {
        background-color: #f8b617;
    }

    .carousel-caption {
        position: sticky;
        color: #f8b617;
        right: 5%;
        left: 5%;
    }
        .carousel-caption :hover {
            background-color: #f8b617;
            color: white;
        }
</style>


@section Scripts{
    <script>
        $('.carousel').carousel();
    </script>
}

