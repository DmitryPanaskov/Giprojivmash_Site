@model Giprojivmash.WEB.Models.Portfolio.PortfolioPageViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <link rel="stylesheet" type="text/css" href="~/lib/slick-carousel/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick-carousel/slick-theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/fancyBox/jquery.fancybox.min.css">
    <link rel="stylesheet " type="text/css" href="~/css/main-slider.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/main-fancybox.min.css">
}


<div class="container">
    <div class="row">
        <div class="d-none d-sm-none d-md-none d-xl-block d-lg-block col-6">
            <div class="slider-wrap">
                <div class="slider-for">
                    <div>
                        <a data-fancybox="gallery" href="~/images/portfolio/gomeldrev/1.jpg">
                            <img class="img-fluid" src="~/images/portfolio/gomeldrev/1.jpg">
                        </a>
                    </div>
                    <div>
                        <a data-fancybox="gallery" href="~/images/portfolio/gomeldrev/2.jpg">
                            <img class="img-fluid" src="~/images/portfolio/gomeldrev/2.jpg">
                        </a>
                    </div>
                    <div>
                        <a data-fancybox="gallery" href="~/images/portfolio/gomeldrev/3.jpg">
                            <img class="img-fluid" src="~/images/portfolio/gomeldrev/3.jpg">
                        </a>
                    </div>
                    <div>
                        <a data-fancybox="gallery" href="~/images/portfolio/gomeldrev/4.JPG">
                            <img class="img-fluid" src="~/images/portfolio/gomeldrev/4.jpg">
                        </a>
                    </div>
                    <div>
                        <a data-fancybox="gallery" href="~/images/portfolio/gomeldrev/5.JPG">
                            <img class="img-fluid" src="~/images/portfolio/gomeldrev/5.jpg">
                        </a>
                    </div>
                </div>
                <div class="slider-nav">
                    <div>
                        <img class="img-fluid" src="~/images/portfolio/gomeldrev/1.jpg">
                    </div>
                    <div>
                        <img class="img-fluid" src="~/images/portfolio/gomeldrev/2.jpg">
                    </div>
                    <div>
                        <img class="img-fluid" src="~/images/portfolio/gomeldrev/3.jpg">
                    </div>
                    <div>
                        <img class="img-fluid" src="~/images/portfolio/gomeldrev/4.jpg">
                    </div>
                    <div>
                        <img class="img-fluid" src="~/images/portfolio/gomeldrev/5.jpg">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-xl-6 col-lg-6">
            <h3>Строительство завода ОАО «Гомельдрев»</h3>
            <div class="icon-bar">
                <i class="fa fa-map-marker"></i>
                <div class="content">
                    <a target="_blank" href="https://goo.gl/maps/epTNoRkUL72Qzo56A">
                        Солтановский с/с 7,
                        Речицкий р-н, г. Речица, 247492
                        Гомельская область,
                        Республика Беларусь
                    </a>
                </div>
            </div>
            <div class="d-block d-sm-block d-md-block d-lg-none d-xl-none">
                <div>
                    <img class="img-fluid" src="~/images/portfolio/gomeldrev/1.jpg">
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-6">
                    <h4>Год постройки</h4>
                    <p>2015</p>
                </div>
                <div class="col-6">
                    <h4>Площадь объекта</h4>
                    <p>–</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <h4>Формат работ</h4>
                    <p>Проектирование</p>
                </div>
                <div class="col-6">
                    <h4>Тип здания</h4>
                    <p>Объект промышленного назначения</p>
                </div>
            </div>
        </div>
        <hr>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="text-justify">
                ОАО "Гомельдрев" является одним из крупнейших и старейших мебельных предприятий в Республике Беларусь, присутствует на рынке с 1879 года. Сегодня ОАО "Гомельдрев" - общепризнанный авторитет в области деревообработки и производства мебели.
            </p>
            <p class="text-justify">
                В 2015 году предприятие закончило крупнейшую реконструкцию своих структурных подразделений, которую выполнили специалисты
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-6">
            <form>
                <button type="submit" class="btn btn-orange" asp-action="Himzavod" asp-controller="Portfolio">
                    <span class="fa fa-angle-double-left btn-orange-icon"></span>
                    <span class="btn-orange-caption">
                        Реконструкция здания тепловой электро станции <br />
                        ОАО «Гомельский химический завод»
                    </span>
                </button>
            </form>
        </div>
        <div class="col-12 col-sm-12 col-md-6">
            <form>
                <button type="submit" class="btn btn-orange" asp-action="Hoiniki" asp-controller="Portfolio">
                    <span class="btn-orange-caption">
                        Модернизация зданий и сооружений<br />
                        ОАО «Хойникский завод ЖБИ»
                    </span>
                    <span class="fa fa-angle-double-right btn-orange-icon"></span>
                </button>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript" src="~/lib/slick-carousel/slick.min.js"></script>
    <script src="~/lib/fancyBox/jquery.fancybox.min.js"></script>
    <script>
        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav'
        });
        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: true,
            centerMode: true,
            focusOnSelect: true
        });
    </script>
}

